<div class="message">
  <div class="message-box">
    <div class="name-time">
      <div class="name">
        <%= message.user.name %>
      </div>
      <div class="created-at">
        <%= l message.created_at %>
      </div>
    </div>
    <div class="text">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '200x200'), class: 'message-image' if message.image.attached? %>
  </div>
</div>